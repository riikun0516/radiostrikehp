---
const navItems = [
  { name: 'ホーム', href: '/' },
  { name: 'お知らせ', href: '/news' },
  { name: 'お便り', href: '/letter' },
  { name: '配信サイト', href: '/distribution' },
  { name: '公式SNS', href: '/sns' },
  { name: 'Contact', href: '/contact' },
];
const logoUrl = "https://api.radiostrike.jp/uploads/logo.png";
---

<header class="site-header">
  <div class="header-inner">
    <a href="/" class="logo">
      <img src={logoUrl} alt="RadioStrike" />
    </a>
    <nav class="nav-container">
      <ul class="nav-list">
        {navItems.map(item => (
          <li><a href={item.href} class="nav-link">{item.name}</a></li>
        ))}
      </ul>
    </nav>
  </div>
</header>

<style>
  .site-header {
    background: #fff;
    border-bottom: 1px solid #eee;
    position: sticky;
    top: 0;
    z-index: 1000;
    height: 70px;
    display: flex;
    align-items: center;
  }
  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    padding: 0 20px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .logo img { height: 40px; width: auto; }
  
  /* ナビゲーションの崩れを修正 */
  .nav-list {
    display: flex;
    list-style: none; /* ドットを消去 */
    margin: 0;
    padding: 0;
    gap: 20px;
  }
  .nav-link {
    text-decoration: none;
    color: #444;
    font-weight: 600;
    font-size: 14px;
    transition: color 0.2s;
  }
  .nav-link:hover { color: #3f51b5; }

  @media (max-width: 850px) {
    .nav-container { display: none; } /* モバイル時は一旦非表示に */
  }
</style>