---
// 現在の年を自動取得
const currentYear = new Date().getFullYear();

// ナビゲーション項目の整理
const footerLinks = [
  { name: 'お知らせ', href: '/news' },
  { name: 'お便り', href: '/letter' },
  { name: 'お問い合わせ', href: '/contact' },
  { name: '配信サイト一覧', href: '/distribution' },
  { name: '公式SNS', href: '/sns' },
];

const legalLinks = [
  { name: '利用規約', href: '/terms' },
  { name: 'プライバシーポリシー', href: '/privacy' },
  { name: 'ライセンス', href: '/license' },
  { name: 'クレジット', href: '/credits' },
];
---

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-top">
      <div class="footer-brand">
        <a href="/" class="footer-logo">RadioStrike</a>
        <p class="footer-tagline">深夜ラジオをモットーに活動しているWebラジオ</p>
      </div>

      <div class="footer-nav-group">
        <div class="nav-column">
          <h3>Menu</h3>
          <ul>
            {footerLinks.map(link => (
              <li><a href={link.href}>{link.name}</a></li>
            ))}
          </ul>
        </div>
        
        <div class="nav-column">
          <h3>Legal</h3>
          <ul>
            {legalLinks.map(link => (
              <li><a href={link.href}>{link.name}</a></li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <div class="footer-bottom">
      <p class="copyright">&copy; {currentYear} RadioStrike All Rights Reserved.</p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: #1a1a1a;
    color: #ffffff;
    padding: 60px 0 30px;
    margin-top: auto; /* レイアウトの下部に固定するため */
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .footer-top {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 40px;
    margin-bottom: 60px;
  }

  .footer-brand {
    flex: 1;
    min-width: 250px;
  }

  .footer-logo {
    font-size: 28px;
    font-weight: 900;
    color: #ffffff;
    text-decoration: none;
    letter-spacing: 0.05em;
    display: block;
    margin-bottom: 15px;
  }

  .footer-tagline {
    font-size: 14px;
    color: #999;
    line-height: 1.6;
  }

  .footer-nav-group {
    display: flex;
    gap: 60px;
  }

  .nav-column h3 {
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 20px;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .nav-column ul {
    list-style: none;
    padding: 0;
  }

  .nav-column li {
    margin-bottom: 12px;
  }

  .nav-column a {
    color: #aaa;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.2s ease;
  }

  .nav-column a:hover {
    color: #ffffff;
  }

  .footer-bottom {
    border-top: 1px solid #333;
    padding-top: 30px;
    text-align: center;
  }

  .copyright {
    font-size: 13px;
    color: #666;
  }

  /* モバイル対応 */
  @media (max-width: 768px) {
    .footer-top {
      flex-direction: column;
      text-align: center;
    }
    .footer-nav-group {
      justify-content: center;
      gap: 40px;
    }
    .footer-brand {
      margin-bottom: 20px;
    }
  }
</style>